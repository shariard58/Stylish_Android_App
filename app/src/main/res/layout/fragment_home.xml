<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:gravity="center"
    android:background="#f000"
    android:weightSum="2"
    tools:context=".DashBoard">


    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:id="@+id/Llayout1"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RelativeLayout
                android:id="@+id/Rlayout2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">


                <LinearLayout
                    android:id="@+id/Llayout3"
                    android:orientation="vertical"
                    android:layout_marginTop="100dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/Llayout4"
                        android:orientation="horizontal"
                        android:layout_marginTop="30dp"

                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="135dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardview1"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:id="@+id/Rlayout3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/img1"
                                    android:src="@drawable/spa"
                                    android:layout_width="50dp"
                                    android:layout_centerInParent="true"
                                    android:layout_height="50dp"/>

                                <TextView
                                    android:id="@+id/spatext"
                                    android:layout_width="wrap_content"
                                    android:text="Body Massage and Spa Saloon"
                                    android:textSize="16sp"
                                    android:layout_below="@+id/img1"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_height="wrap_content"/>

                                <Button
                                    android:clickable="true"
                                    android:id="@+id/SpaBTN"
                                    android:background="@android:color/transparent"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                </Button>



                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardview2"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:id="@+id/Rlayout4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/img2"
                                    android:src="@drawable/parlour"
                                    android:layout_width="50dp"
                                    android:layout_centerInParent="true"
                                    android:layout_height="50dp"/>

                                <TextView
                                    android:id="@+id/Parlourtext"
                                    android:layout_width="wrap_content"
                                    android:text="Beauty Parlour"
                                    android:textSize="16sp"
                                    android:layout_below="@+id/img2"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_height="wrap_content"/>

                                <Button
                                    android:clickable="true"
                                    android:id="@+id/ParlourBTN"
                                    android:background="@android:color/transparent"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                </Button>



                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>




                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Llayout5"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="135dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardview3"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:id="@+id/Rlayout5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/img3"
                                    android:src="@drawable/saloonn"
                                    android:layout_width="50dp"
                                    android:layout_centerInParent="true"
                                    android:layout_height="50dp"/>

                                <TextView
                                    android:id="@+id/Hairtext"
                                    android:layout_width="wrap_content"
                                    android:text="Hair Saloon"
                                    android:textSize="16sp"
                                    android:layout_below="@+id/img3"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_height="wrap_content"/>

                                <Button
                                    android:clickable="true"
                                    android:id="@+id/SaloonBTN"
                                    android:background="@android:color/transparent"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                </Button>



                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardview4"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:id="@+id/Rlayout6"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/img4"
                                    android:src="@drawable/tatto"
                                    android:layout_width="50dp"
                                    android:layout_centerInParent="true"
                                    android:layout_height="50dp"/>

                                <TextView
                                    android:id="@+id/tattotext"
                                    android:layout_width="wrap_content"
                                    android:text="Tattoo Shop"
                                    android:textSize="16sp"
                                    android:layout_below="@+id/img4"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_height="wrap_content"/>

                                <Button
                                    android:clickable="true"
                                    android:id="@+id/TattooBTN"
                                    android:background="@android:color/transparent"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                </Button>



                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>




                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/Llayout6"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="135dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardview5"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:id="@+id/Rlayout7"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/img5"
                                    android:src="@drawable/nail"
                                    android:layout_width="50dp"
                                    android:layout_centerInParent="true"
                                    android:layout_height="50dp"/>

                                <TextView
                                    android:id="@+id/Nailtext"
                                    android:layout_width="wrap_content"
                                    android:text="Nail Saloon"
                                    android:textSize="16sp"
                                    android:layout_below="@+id/img5"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_height="wrap_content"/>

                                <Button
                                    android:clickable="true"
                                    android:id="@+id/NailBTN"
                                    android:background="@android:color/transparent"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                </Button>



                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>



                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>




</RelativeLayout>